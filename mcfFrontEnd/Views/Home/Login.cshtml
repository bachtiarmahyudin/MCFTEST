@model UserLogin
@{
    ViewData["Title"] = "User Login";
}
<div>
    <h1>@ViewData["Title"]</h1>

    <form class="mb-3" method ="post" asp-controller="Home" asp-action="LoginForm" asp-antiforgery="true">
        <div class="form-group mb-3">
            <label for="username" asp-for="UserName">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Enter username" style="width:250px" placeholder="" asp-for="UserName">
        </div>
        <div class="form-group mb-3">
            <label for="password" asp-for="Password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Enter password" style="width:250px" placeholder="" asp-for="Password">
        </div>
        <button type="submit" class="btn btn-primary mb-3">Log In</button>
    </form>

    <p> Username: <b>admin</b>
        <br />Password: <b>admin</b>
    </p>
</div>
