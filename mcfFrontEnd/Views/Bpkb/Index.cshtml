@model IEnumerable<BPKB>
@{
    ViewData["Title"] = "DAFTAR BPKB";
    var editbpkb = new BPKB();
}
<div>
    <h1>@ViewData["Title"]</h1>
    <a class="btn btn-primary" asp-area="" asp-controller="Bpkb" asp-action="Create">Create BPKB</a>
    <hr/>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">Agreement Number</th>
                <th scope="col">Branch Id</th>
                <th scope="col">Nomor BPKB</th>
                <th scope="col">Nomor Polisi</th>
                <th scope="col">Tanggal BPKB In</th>
                <th scope="col">Tanggal BPKB</th>
                <th scope="col">Nomor Faktur</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        <a asp-action="Edit" asp-route-id="@item.AgreementNumber">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.AgreementNumber" onclick="if (! confirm('Continue?') ) { return false; }">Delete</a>
                    </th>
                    <th>@item.AgreementNumber</th>
                    <td>@item.BranchId</td>
                    <td>@item.BPKBNo</td>
                    <td>@item.PoliceNo</td>
                    <td>@String.Format("{0:dd/MM/yyyy}", @item.BPKBDateIn)</td>
                    <td>@String.Format("{0:dd/MM/yyyy}", @item.BPKBDate)</td>
                    <td>@item.FakturNo</td>
                </tr>
            }
        </tbody>
    </table>
</div>
